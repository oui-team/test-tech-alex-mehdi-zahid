{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    // outDir: "bin" for a binary
    // outDir: "lib" for a library
    // Update the "files" property of the package.json if outDir change.
    "outDir": "bin",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2020",
  },
  "include": [
    "src/**/*",
  ],
  "exclude" : [
    "node_modules",
    "tests/**/*"
  ],
  "ts-jest": {
    "files": true
  },
}